<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intelligentgreenhouse_off"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".IntelligentGreenHouseActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.2725"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2458" />

        <TextView
            android:id="@+id/door"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.158"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15625"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/humi"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18125"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25625" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.40875"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/light_img"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.00"
            android:background="@drawable/light"
            android:contentDescription="@string/light_desc" />
        
        <ImageView
            android:id="@+id/rain_img"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.00"
            android:background="@drawable/bg_rainy"
            android:contentDescription="@string/light_desc" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.66" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.31875"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2458" />

        <TextView
            android:id="@+id/airp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.158"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/snow"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15625"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vum"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18125"
            android:gravity="center"
            android:hint="@string/noinit"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25625"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.363" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.155" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.145" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.137" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>